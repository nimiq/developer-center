    "iconify-icon": "^2.0.0",
    "json2md": "^2.0.1",
    "jszip": "^3.10.1",
    "markdown-it-mathjax3": "^4.3.2",
    "medium-zoom": "^1.1.0",
    "nimiq-css": "^0.0.34",
    "prettier": "^3.2.5",
    "radix-vue": "^1.5.2",
    "svg-packer": "^0.0.3",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.8.1",
    "@iconify-json/carbon": "^1.1.31",
