{
  "name": "nimiq-developer-center",
  "title": "Nimiq Developer Center",
  "type": "module",
  "version": "2.0.6",
  "packageManager": "pnpm@10.19.0",
  "description": "Guides, resources and tips on how to create with Nimiq. Start building the future now!",
  "author": {
    "name": "Nimiq",
    "url": "https://nimiq.com"
  },
  "homepage": "https://nimiq.com/developers",
  "scripts": {
    "dev": "DEPLOYMENT_MODE=development vitepress dev",
    "build": "DEPLOYMENT_MODE=production vitepress build",
    "build:staging": "DEPLOYMENT_MODE=staging vitepress build",
    "preview": "vitepress preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "build:web-client": "typedoc --tsconfig tsconfig.web-client.json --githubPages false --plugin typedoc-plugin-markdown --exclude index.md",
    "build:rpc": "tsx -e \"import { buildRpcClientDocs } from './.vitepress/rpc/build.ts'; (async () => await buildRpcClientDocs())()\"",
    "update": "npx taze latest --update -w",
    "release": "bumpp --commit --tag --push",
    "server:dev": "pnpm --filter server dev",
    "server:build": "pnpm --filter server build",
    "server:test": "pnpm --filter server test",
    "server:mcp": "pnpm --filter server mcp:studio"
  },
  "dependencies": {
    "@iconify-json/carbon": "catalog:",
    "@iconify/vue": "catalog:",
    "@nimiq/utils": "catalog:",
    "@unhead/vue": "catalog:",
    "@unocss/reset": "catalog:",
    "@vueuse/core": "catalog:",
    "canvas-confetti": "catalog:",
    "iconify-icon": "catalog:",
    "json2md": "catalog:",
    "medium-zoom": "catalog:",
    "motion-v": "catalog:",
    "nimiq-rpc-client-ts": "catalog:",
    "reka-ui": "catalog:",
    "vaul-vue": "catalog:",
    "vue": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@apidevtools/json-schema-ref-parser": "catalog:",
    "@iconify-json/logos": "catalog:",
    "@iconify-json/tabler": "catalog:",
    "@iconify-json/vscode-icons": "catalog:",
    "@iconify/utils": "catalog:",
    "@nimiq/core": "catalog:",
    "@open-rpc/meta-schema": "catalog:",
    "@rollup/plugin-terser": "catalog:",
    "@types/canvas-confetti": "catalog:",
    "@types/node": "catalog:",
    "@unocss/eslint-plugin": "catalog:",
    "@unocss/transformer-directives": "catalog:",
    "bumpp": "catalog:",
    "consola": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "markdown-it-mathjax3": "catalog:",
    "nimiq-css": "catalog:",
    "nimiq-vitepress-theme": "catalog:",
    "ofetch": "catalog:",
    "pathe": "catalog:",
    "pkg-types": "catalog:",
    "postcss": "catalog:",
    "sharp": "catalog:",
    "shiki": "catalog:",
    "simple-git-hooks": "catalog:",
    "svgo": "catalog:",
    "tsx": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unocss-preset-fluid-sizing": "catalog:",
    "unocss-preset-onmax": "catalog:",
    "unocss-preset-scale-px": "catalog:",
