    "json2md": "^2.0.1",
    "jszip": "^3.10.1",
    "markdown-it-mathjax3": "^4.3.2",
    "medium-zoom": "^1.1.0",
    "nimiq-css": "^0.2.21",
    "prettier": "^3.3.3",
    "radix-vue": "^1.9.6",
    "svg-packer": "^0.0.3",
    "vaul-vue": "^0.2.0",
    "vue": "^3.5.11"
