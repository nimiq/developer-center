{
  "name": "nimiq-developer-center",
  "title": "Nimiq Developer Center",
  "type": "module",
  "version": "0.0.1-alpha",
  "packageManager": "pnpm@10.5.2",
  "description": "Guides, resources and tips on how to create with Nimiq. Start building the future now!",
  "author": {
    "name": "Nimiq",
    "url": "https://nimiq.com"
  },
  "homepage": "https://nimiq.github.io/developer-center/",
  "scripts": {
    "dev": "DEPLOYMENT_MODE=development vitepress dev",
    "build": "DEPLOYMENT_MODE=production vitepress build",
    "build:staging": "DEPLOYMENT_MODE=staging vitepress build",
    "preview": "vitepress preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:web-client": "typedoc --tsconfig tsconfig.web-client.json --githubPages false --plugin typedoc-plugin-markdown --exclude index.md --hideBreadcrumbs",
    "update": "npx taze latest --update -w"
  },
  "dependencies": {
    "@iconify/vue": "^4.3.0",
    "@unhead/vue": "^1.11.20",
    "@unocss/reset": "^66.0.0",
    "@vueuse/core": "^12.8.2",
    "iconify-icon": "^2.3.0",
    "json2md": "^2.0.2",
    "jszip": "^3.10.1",
    "medium-zoom": "^1.1.0",
    "nimiq-css": "link:../ui/packages/nimiq-css",
    "nimiq-vitepress-theme": "link:../ui/packages/nimiq-vitepress-theme",
    "prettier": "^3.5.3",
    "radix-vue": "^1.9.17",
    "vaul-vue": "^0.3.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.6.0",
    "@iconify-json/logos": "^1.2.4",
    "@iconify-json/nimiq": "https://pkg.pr.new/onmax/nimiq-ui/nimiq-icons@0b3a8d1",
    "@iconify-json/tabler": "^1.2.17",
    "@iconify/utils": "^2.3.0",
    "@nimiq/core": "^2.0.6",
    "@types/node": "^22.13.9",
    "@unocss/eslint-plugin": "66.1.0-beta.3",
    "@unocss/transformer-directives": "^66.0.0",
    "consola": "^3.4.0",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "markdown-it-mathjax3": "^4.3.2",
    "pathe": "^2.0.3",
    "pkg-types": "^2.1.0",
    "postcss": "^8.5.3",
    "sharp": "^0.33.5",
    "simple-git-hooks": "^2.11.1",
    "svgo": "^3.3.2",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.2",
    "unocss": "^66.0.0",
    "unocss-preset-fluid-sizing": "^0.0.17",
    "unocss-preset-onmax": "^1.0.0-beta.10",
    "unplugin-auto-import": "^19.1.1",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.4.1",
    "vite": "^6.2.0",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitepress": "^2.0.0-alpha.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
