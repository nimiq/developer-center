    "postcss": "^8.5.3",
    "sharp": "^0.33.5",
    "simple-git-hooks": "^2.11.1",
    "svgo": "^3.3.2",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.4",
