    "markdown-it-mathjax3": "^4.3.2",
    "medium-zoom": "^1.1.0",
    "nimiq-css": "^0.3.6",
    "prettier": "^3.5.1",
    "radix-vue": "^1.9.16",
    "svg-packer": "^0.0.3",
    "vaul-vue": "^0.3.0",
    "vue": "^3.5.13"
