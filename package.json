{
  "name": "nimiq-developer-center",
  "title": "Nimiq Developer Center",
  "type": "module",
  "version": "0.0.1-alpha",
  "packageManager": "pnpm@10.17.0",
  "description": "Guides, resources and tips on how to create with Nimiq. Start building the future now!",
  "author": {
    "name": "Nimiq",
    "url": "https://nimiq.com"
  },
  "homepage": "https://nimiq.github.io/developer-center/",
  "scripts": {
    "dev": "DEPLOYMENT_MODE=development vitepress dev",
    "build": "DEPLOYMENT_MODE=production vitepress build",
    "build:staging": "DEPLOYMENT_MODE=staging vitepress build",
    "preview": "vitepress preview",
    "postinstall": "tsx -e \"import { fetchOpenRpcDocument } from './.vitepress/rpc/fetch.ts'; (async () => await fetchOpenRpcDocument())()\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "build:web-client": "typedoc --tsconfig tsconfig.web-client.json --githubPages false --plugin typedoc-plugin-markdown --exclude index.md",
    "update": "npx taze latest --update -w"
  },
  "dependencies": {
    "@iconify-json/carbon": "^1.2.13",
    "@iconify/vue": "^5.0.0",
    "@nimiq/utils": "^0.12.4",
    "@unhead/vue": "^2.0.17",
    "@unocss/reset": "^66.5.1",
    "@vueuse/core": "^13.9.0",
    "canvas-confetti": "^1.9.3",
    "iconify-icon": "^3.0.1",
    "json2md": "^2.0.3",
    "medium-zoom": "^1.1.0",
    "motion-v": "^1.7.1",
    "nimiq-rpc-client-ts": "1.0.0-beta.35",
    "reka-ui": "^2.5.0",
    "vaul-vue": "^0.4.1",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@apidevtools/json-schema-ref-parser": "^14.2.1",
    "@iconify-json/logos": "^1.2.9",
    "@iconify-json/tabler": "^1.2.23",
    "@iconify-json/vscode-icons": "^1.2.30",
    "@iconify/utils": "^3.0.2",
    "@nimiq/core": "^2.1.1",
    "@open-rpc/meta-schema": "^1.14.9",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.5.2",
    "@unocss/eslint-plugin": "66.5.1",
    "@unocss/transformer-directives": "^66.5.1",
    "consola": "^3.4.2",
    "eslint": "^9.35.0",
    "lint-staged": "^16.1.6",
    "markdown-it-mathjax3": "^4.3.2",
    "nimiq-css": "^1.0.0-beta.101",
    "nimiq-vitepress-theme": "^1.0.0-beta.101",
    "ofetch": "^1.4.1",
    "pathe": "^2.0.3",
    "pkg-types": "^2.3.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "shiki": "^3.12.2",
    "simple-git-hooks": "^2.13.1",
    "svgo": "^4.0.0",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "unocss": "66.5.1",
    "unocss-preset-fluid-sizing": "^0.0.17",
    "unocss-preset-onmax": "^1.0.0-beta.39",
    "unocss-preset-scale-px": "^0.0.2",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-icons": "^22.3.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.1.6",
    "vite-plugin-image-optimizer": "^2.0.2",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vite-plugin-wasm": "^3.5.0",
    "vitepress": "^2.0.0-alpha.12",
    "vitepress-plugin-llms": "^1.7.5",
    "vue-tsc": "^3.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "bufferutil",
      "es5-ext",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver",
      "utf-8-validate",
      "vue-demi"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
