{
  "name": "nimiq-developer-center",
  "title": "Nimiq Developer Center",
  "type": "module",
  "version": "0.0.1-alpha",
  "packageManager": "pnpm@10.12.1",
  "description": "Guides, resources and tips on how to create with Nimiq. Start building the future now!",
  "author": {
    "name": "Nimiq",
    "url": "https://nimiq.com"
  },
  "homepage": "https://nimiq.github.io/developer-center/",
  "scripts": {
    "dev": "DEPLOYMENT_MODE=development vitepress dev",
    "build": "DEPLOYMENT_MODE=production vitepress build",
    "build:staging": "DEPLOYMENT_MODE=staging vitepress build",
    "preview": "vitepress preview",
    "postinstall": "tsx ./.vitepress/scripts/rpc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:web-client": "typedoc --tsconfig tsconfig.web-client.json --githubPages false --plugin typedoc-plugin-markdown --exclude index.md",
    "update": "npx taze latest --update -w"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@unhead/vue": "^2.0.10",
    "@unocss/reset": "^66.2.0",
    "@vueuse/core": "^13.3.0",
    "canvas-confetti": "^1.9.3",
    "iconify-icon": "^3.0.0",
    "json2md": "^2.0.3",
    "medium-zoom": "^1.1.0",
    "nimiq-rpc-client-ts": "1.0.0-beta.28",
    "reka-ui": "^2.3.1",
    "vaul-vue": "^0.4.1",
    "vue": "^3.5.16"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@apidevtools/json-schema-ref-parser": "^13.0.5",
    "@iconify-json/logos": "^1.2.4",
    "@iconify-json/tabler": "^1.2.19",
    "@iconify/utils": "^2.3.0",
    "@nimiq/core": "^2.1.0",
    "@open-rpc/meta-schema": "^1.14.9",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.0.1",
    "@unocss/eslint-plugin": "66.2.0",
    "@unocss/transformer-directives": "^66.2.0",
    "consola": "^3.4.2",
    "eslint": "^9.28.0",
    "lint-staged": "^16.1.0",
    "markdown-it-mathjax3": "^4.3.2",
    "nimiq-css": "^1.0.0-beta.58",
    "nimiq-vitepress-theme": "^1.0.0-beta.58",
    "ofetch": "^1.4.1",
    "pathe": "^2.0.3",
    "pkg-types": "^2.1.0",
    "postcss": "^8.5.5",
    "sharp": "^0.34.2",
    "shiki": "^3.6.0",
    "simple-git-hooks": "^2.13.0",
    "svgo": "^3.3.2",
    "tsx": "^4.20.2",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.4",
    "typescript": "^5.8.3",
    "unocss": "66.2.0",
    "unocss-preset-fluid-sizing": "^0.0.17",
    "unocss-preset-onmax": "^1.0.0-beta.37",
    "unocss-preset-scale-px": "^0.0.2",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.7.0",
    "vite": "^6.3.5",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitepress": "^2.0.0-alpha.6",
    "vitepress-plugin-llms": "^1.5.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "es5-ext",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver",
      "utf-8-validate",
      "vue-demi"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
