    "typedoc": "^0.25.12",
    "typedoc-plugin-markdown": "^3.17.1",
    "unocss": "^0.58.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "5.1.6",
    "vite-plugin-image-optimizer": "^1.1.7",
    "vite-plugin-vue-devtools": "7.0.17",
    "vitepress": "1.0.0-rc.45"
