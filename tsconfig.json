{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "preserve",
    "lib": [
      "es2022",
      "dom"
    ],
    "baseUrl": ".",
    "module": "NodeNext",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [".vitepress/**/*", "**/**.d.ts"],
  "exclude": [
    "**/dist/**"
  ]
}
